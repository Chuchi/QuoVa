<fragment xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:map="http://schemas.android.com/apk/res-auto"
          xmlns:tools="http://schemas.android.com/tools"
          android:id="@+id/map"
          android:name="com.google.android.gms.maps.SupportMapFragment"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          tools:context="arriba.buscame.quovadis.MapsActivity" >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="horizontal" android:layout_width="match_parent"
                  android:layout_height="60dp"
                  android:layout_gravity="bottom|center">


        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/IMV1"
            android:src="@drawable/vadis"
            android:background="#c809090a"
            android:padding="4.5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="11dp"
            android:layout_marginBottom="5dp" />

        <ImageView
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:id="@+id/IMV2"
            android:src="@drawable/mantenn"
            android:background="#c83734f7"
            android:padding="3dp"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="11dp"
            android:layout_marginBottom="5dp" />

        <ImageView
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:id="@+id/IMV3"
            android:src="@drawable/infor"
            android:background="#c83734f7"
            android:padding="2dp"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="11dp"
            android:layout_marginBottom="5dp" />

        <ImageView
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:id="@+id/IMV4"
            android:src="@drawable/recorr"
            android:background="#c83734f7"
            android:padding="3dp"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="11dp"
            android:layout_marginBottom="5dp" />


    </LinearLayout>

</fragment>